<Page x:Class="PointOfSale.FlavorSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Flavor Selection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="AddCherry" Margin="10" Grid.Row="0" Grid.Column="0">Cherry</Button>
        <Button Click="AddLime" Margin="10" Grid.Row="1" Grid.Column="0">Lime</Button>
        <Button Click="AddVanilla" Margin="10" Grid.Row="2" Grid.Column="0">Vanilla</Button>
        <Button Click="AddChocolate" Margin="10" Grid.Row ="0" Grid.Column="1">Chocolate</Button>
        <Button Click="AddOrange" Margin="10" Grid.Row="1" Grid.Column="1">Orange</Button>
        <Button Click="AddCola" Margin="10" Grid.Row="0" Grid.Column="2">Cola</Button>
        <Button Click="AddRootBeer" Margin="10" Grid.Row="1" Grid.Column="2">Root Beer</Button>
    </Grid>
</Page>
