<Page x:Class="PointOfSale.EntreeSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Entree Selection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="180"/>
                <Setter Property="Height" Value="110"/>
            </Style>
        </WrapPanel.Resources>
        <Button x:Name="uxBrontowurst" Margin="10">Brontowurst</Button>
        <Button x:Name="uxDinoNuggets" Margin="10">Dino-Nuggets</Button>
        <Button x:Name="uxPrehistoricPBJ" Margin="10">Prehistoric PB&amp;j</Button>
        <Button x:Name="uxPterodactylWings" Margin="10">Pterodactyl Wings</Button>
        <Button x:Name="uxSteakosaurus" Margin="10">Steakosaurus Burger</Button>
        <Button x:Name="uxTRexKing" Margin="10">T-Rex King Burger</Button>
        <Button x:Name="uxVelociWrap">Veloci-Wrap</Button>
    </WrapPanel>
</Page>
